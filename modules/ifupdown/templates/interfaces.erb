# /etc/network/interfaces template for servers (<%=@hostname%>)
# Created by Puppet

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp


<% @intvars['neighbors'].each do |name, iface| -%>
auto <%= name %>
iface <%= name %> inet static
    address  <%= iface['ip'] %>
    netmask <%= iface['mask'] %>
<% end %>
